generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id            String              @id @default(cuid())
  username      String
  password      String
  class         String              @default("none")
  role          Role                @default(user)
  assignments   Assignments_User[]
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}

model Assignment {
  id            String              @id @default(cuid())
  title         String
  description   String
  content       String
  attachments   Json
  module        String
  tags          String
  deadlineAt    DateTime
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  users         Assignments_User[]
}

model Assignments_User {
  assignmentsId String
  assignment    Assignment          @relation(fields: [assignmentsId], references: [id])

  userId        String
  user          User                @relation(fields: [userId], references: [id])

  evaluation    Int
  status        String
  comment       String
  
  @@id([assignmentsId, userId])
}